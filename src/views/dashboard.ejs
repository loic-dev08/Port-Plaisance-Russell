
<%- include('partials/header', { title, user }) %>
<section>
  <h1>Tableau de bord</h1>
  <div class="grid">
    <div class="card">
      <h3>Utilisateur</h3>
      <p><strong>Nom :</strong> <%= user.username %></p>
      <p><strong>Email :</strong> <%= user.email %></p>
    </div>
    <div class="card">
      <h3>Date du jour</h3>
      <p><%= new Date(today).toLocaleDateString('fr-FR') %></p>
    </div>
  </div>

  <h2>Réservations en cours</h2>
  <table>
    <thead>
      <tr><th>Catway</th><th>Client</th><th>Bateau</th><th>Début</th><th>Fin</th></tr>
    </thead>
    <tbody>
      <% if (reservations.length === 0) { %>
        <tr><td colspan="5">Aucune réservation en cours</td></tr>
      <% } %>
      <% reservations.forEach(r => { %>
        <tr>
          <td><%= r.catwayNumber %></td>
          <td><%= r.clientName %></td>
          <td><%= r.boatName %></td>
          <td><%= new Date(r.startDate).toLocaleDateString('fr-FR') %></td>
          <td><%= new Date(r.endDate).toLocaleDateString('fr-FR') %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
<%- include('partials/footer') %>
